<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/purchaseGasLayout"
    tools:context=".PurchaseGasActivity">

    <TextView
        android:id="@+id/enterGasPriceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/enterGasPriceS"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/enterGasPriceET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/enterGasPriceTV"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/enterGasVolumeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/enterGasPriceET"
        android:text="@string/fuelVolumeTV"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/enterGasVolumeET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/enterGasVolumeTV"
        android:ems="10"
        android:inputType="numberDecimal" />'

    <TextView
        android:id="@+id/enterKmofGasTV"
        android:text="@string/kmOfGasText"
        android:textSize="18dp"
        android:layout_below="@id/enterGasVolumeET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/enterKMofGasET"
        android:layout_below="@+id/enterKmofGasTV"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/confirmPurchaseGasButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirmPurchase"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
         />

    <Button
        android:id="@+id/deleteGas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="128dp"
        android:text="@string/deleteGastext" />

    <Button
        android:id="@+id/editGasButton"
        android:text="@string/editGasButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>