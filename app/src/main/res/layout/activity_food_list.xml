<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.algonquin.cst2335_finalproject.FoodList">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/foodListView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@id/enterFood">
        </ListView>

        <EditText
            android:id="@+id/enterFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/addFood"
            android:inputType="text" />

        <Button
            android:id="@+id/addFood"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/editFood"
            android:text="@string/add_food"/>

        <Button
            android:id="@+id/editFood"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/deleteFood"
            android:text="@string/edit_info"/>

        <Button
            android:id="@+id/deleteFood"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="@string/delete_info"/>

    </RelativeLayout>

</LinearLayout>
